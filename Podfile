# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Naisho' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Naisho
  
  # Realm
  pod 'RealmSwift'
  
  # FourSquare API
  pod 'FoursquareAPIClient'
  pod 'SDWebImage'
  pod 'SwiftyJSON'
  
  # Page View
  pod 'XLPagerTabStrip', '~> 7.0'
  
  # Location
  pod 'SwiftLocation'
  
  # Facebook Login Stuff
  pod 'FBSDKLoginKit'
  
  # Firebase
  pod 'Firebase/Core'
  pod 'Firebase/Auth'

  target 'NaishoTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'NaishoUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
