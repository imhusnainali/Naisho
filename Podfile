  pod 'SwiftLocation'
  
  # Facebook Login Stuff
  pod 'FBSDKLoginKit'
  
  # Loading Fluid View
  pod 'BAFluidView'
  
  # Firebase
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Database'
  
  # FloatingButton
  pod 'RAMAnimatedTabBarController', "~> 2.0.13"
  
